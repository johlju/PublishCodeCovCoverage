{
  "name": "publish-codecov-coverage",
  "version": "1.0.0",
  "description": "Azure Pipeline task for uploading code coverage to Codecov.io",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.js",
    "test:all": "npm run lint && npm run format && npm run test && npm run test:integration",
    "clean": "rimraf dist",
    "package": "./package.sh",
    "lint": "eslint ./src --ignore-pattern \"**/*.test.ts\" --ignore-pattern \"**/*.tests.ts\" --max-warnings=0",
    "lint:all": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "lint:report": "eslint . --max-warnings=0 -o eslint-report.txt",
    "format": "prettier --check \"src/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "fix": "npm run format:fix && npm run lint:fix"
  },
  "author": "Viscalyx",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "azure-pipelines-task-lib": "^5.2.1",
    "winston": "^3.18.3",
    "winston-transport": "^4.9.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tfx-cli": "^0.22.1",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.3",
    "globals": "^16.4.0",
    "@jest/types": "^30.2.0"
  },
  "engines": {
    "node": ">=22.0.0 <25.0.0"
  }
}
