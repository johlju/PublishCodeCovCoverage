{
  "name": "publish-codecov-coverage",
  "version": "1.0.0",
  "description": "Azure Pipeline task for uploading code coverage to Codecov.io",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.js",
    "test:all": "npm run lint && npm run format && npm run test && npm run test:integration",
    "clean": "rimraf dist",
    "package": "./package.sh",
    "lint": "eslint ./src --ignore-pattern \"**/*.test.ts\" --ignore-pattern \"**/*.tests.ts\" --max-warnings=0",
    "lint:all": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "lint:report": "eslint . --max-warnings=0 -o eslint-report.txt",
    "format": "prettier --check \"src/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "fix": "npm run format:fix && npm run lint:fix"
  },
  "author": "Viscalyx",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.9.0",
    "azure-pipelines-task-lib": "^5.2.0",
    "winston": "^3.17.0",
    "winston-transport": "^4.9.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^28.12.0",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tfx-cli": "^0.21.1",
    "ts-jest": "^29.3.4",
    "typescript": "^5.2.2",
    "globals": "^16.1.0"
  },
  "engines": {
    "node": ">=22.0.0 <24.0.0"
  }
}
