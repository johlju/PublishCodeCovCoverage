{
  "name": "publish-codecov-coverage",
  "version": "1.0.0",
  "description": "Azure Pipeline task for uploading code coverage to Codecov.io",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.js",
    "test:all": "npm run test && npm run test:integration",
    "clean": "rimraf dist",
    "package": "./package.sh",
    "prepackage": "npm run test:all",
    "lint": "eslint \"./src/**/*.ts\" --max-warnings=0 --ignore-pattern \"**/__tests__/**\" --ignore-pattern \"**/__integration_tests__/**\" --ext .ts",
    "lint:all": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:report": "eslint . --ext .ts --max-warnings=0 -o eslint-report.txt",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint-and-fix": "npm run format && npm run lint:fix"
  },
  "author": "Viscalyx",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.9.0",
    "azure-pipelines-task-lib": "^5.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^28.11.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tfx-cli": "^0.21.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=22.0.0 <24.0.0"
  }
}
